<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E2E0E0">

<ImageButton android:layout_width="40dp"
             android:src="@drawable/ic_close_black_24dp"
             android:background="@android:color/transparent"
             android:scaleType="fitXY"
             android:layout_alignParentRight="true"
             android:layout_margin="8dp"
             android:id="@+id/close"
             android:layout_height="40dp"/>

    <TextView android:layout_width="wrap_content"
              android:text="Sample message"
              android:id="@+id/samplemessage"
              android:padding="10dp"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              android:textSize="30sp"
              android:layout_gravity="center"
              android:layout_height="wrap_content"/>

<LinearLayout android:layout_width="wrap_content"
              android:orientation="vertical"
              android:id="@+id/setting"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:weightSum="2"
                  android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                    android:layout_width="140dp"
                    android:hint="Duration(ms)"
                    android:id="@+id/duration"
                    android:inputType="numberSigned"
                    android:layout_margin="10dp"
                    android:textAlignment="center"
                    android:layout_height="50dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                    android:layout_width="140dp"
                    android:hint="Frequency(s)"
                    android:id="@+id/frequency"
                    android:layout_margin="10dp"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:layout_height="50dp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_gravity="center"
              android:text="Alpha"
              android:layout_marginTop="10dp"
              android:layout_height="wrap_content"/>
    <SeekBar android:layout_width="match_parent"
             android:layout_margin="10dp"
             android:id="@+id/alphascroll"
             android:max="100"
             android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:text="Text color"
              android:layout_marginTop="10dp"
              android:layout_gravity="center"
              android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="20dp"
                  android:layout_height="wrap_content">

        <ImageButton
                android:layout_width="50dp"
                android:scaleType="fitXY"
                android:id="@+id/black"
                android:onClick="onColorClick"
                android:src="@drawable/black"
                android:background="@android:color/transparent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="50dp"/>

        <ImageButton
                android:layout_width="50dp"
                android:scaleType="fitXY"
                android:onClick="onColorClick"
                android:id="@+id/red"
                android:src="@drawable/red"
                android:background="@android:color/transparent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="50dp"/>

        <ImageButton
                android:id="@+id/orange"
                android:layout_width="50dp"
                android:scaleType="fitXY"
                android:onClick="onColorClick"
                android:src="@drawable/orange"
                android:background="@android:color/transparent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="50dp"/>

        <ImageButton
                android:id="@+id/green"
                android:layout_width="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/green"
                android:onClick="onColorClick"
                android:background="@android:color/transparent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="50dp"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/checkmessage"
            android:layout_gravity="center"
            android:text="Show message background"
            android:layout_height="wrap_content"/>

    <android.support.design.button.MaterialButton
            android:id="@+id/submitbtn"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
    />

</LinearLayout>
</RelativeLayout>